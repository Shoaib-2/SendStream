{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
 "include": [
    "src/**/*",
    "**/*.test.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
